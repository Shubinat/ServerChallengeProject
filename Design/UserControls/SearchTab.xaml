<UserControl x:Class="Design.UserControls.SearchTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Design.UserControls"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal" Background="Transparent">
        <TextBlock Text="{Binding RequestText}" Margin="5" VerticalAlignment="Center" x:Name="TBoxRequstName"/>
        <Button Margin="5" Content="X" Width="20" Height="20" VerticalAlignment="Center" x:Name="BtnCloseTab" Click="BtnCloseTab_Click" Background="#FFFFB9B9"/>
    </StackPanel>
</UserControl>
